@model IEnumerable<StraightPoolScore.StraightPoolGame>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Limit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BallsRemaining)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfInnings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentPlayerId)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Limit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BallsRemaining)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfInnings)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentPlayerId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
